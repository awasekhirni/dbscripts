    `user_activated` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `user_reseted` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `user_reset_key` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `user_subscribed` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `user_package` INTEGER(10) UNSIGNED,
    `user_subscription_date` DATETIME,
    `user_boosted_posts` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `user_boosted_pages` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
