CREATE TABLE `ads_campaigns` (
    `campaign_id` INTEGER(10) NOT NULL AUTO_INCREMENT,
    `campaign_user_id` INTEGER(10) UNSIGNED NOT NULL,
    `campaign_title` VARCHAR(256) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `campaign_start_date` DATETIME NOT NULL,
    `campaign_end_date` DATETIME NOT NULL,
    `campaign_budget` DOUBLE NOT NULL,
    `campaign_spend` DOUBLE NOT NULL DEFAULT 0,
    `campaign_bidding` ENUM('click','view') COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `audience_countries` MEDIUMTEXT CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `audience_gender` VARCHAR(32) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `audience_relationship` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `ads_title` VARCHAR(255) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `ads_description` MEDIUMTEXT CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `ads_type` VARCHAR(32) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `ads_url` VARCHAR(256) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `ads_page` INTEGER(10) UNSIGNED,
    `ads_group` INTEGER(10) UNSIGNED,
    `ads_event` INTEGER(10) UNSIGNED,
    `ads_placement` ENUM('newsfeed','sidebar') COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `ads_image` VARCHAR(256) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `campaign_created_date` DATETIME NOT NULL,
    `campaign_is_active` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '1',
    `campaign_views` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `campaign_clicks` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    PRIMARY KEY (`campaign_id`)
)
ENGINE = MYISAM;

