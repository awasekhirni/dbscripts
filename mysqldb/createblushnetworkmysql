# ---------------------------------------------------------------------- #
# Add table "users"                                                      #
# ---------------------------------------------------------------------- #

CREATE TABLE `users` (
    `user_id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `user_group` TINYINT(10) UNSIGNED NOT NULL DEFAULT 3,
    `user_name` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `user_email` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `user_email_verified` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `user_email_verification_code` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `user_phone` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `user_phone_verified` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `user_phone_verification_code` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `user_password` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `user_two_factor_enabled` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `user_two_factor_type` ENUM('email','sms','google') COLLATE utf8mb4_0900_ai_ci,
