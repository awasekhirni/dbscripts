    `user_lastname` VARCHAR(256) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `user_gender` ENUM('male','female','other') COLLATE utf8mb4_0900_ai_ci NOT NULL,
