# ---------------------------------------------------------------------- #
# Add table "posts"                                                      #
# ---------------------------------------------------------------------- #

CREATE TABLE `posts` (
    `post_id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `user_id` INTEGER(10) UNSIGNED NOT NULL,
    `user_type` ENUM('user','page') COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `in_group` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `group_id` INTEGER(10) UNSIGNED,
    `group_approved` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '1',
    `in_event` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `event_id` INTEGER(10) UNSIGNED,
    `event_approved` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '1',
    `in_wall` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `wall_id` INTEGER(10) UNSIGNED,
    `post_type` VARCHAR(32) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `colored_pattern` INTEGER(10) UNSIGNED,
    `origin_id` INTEGER(10) UNSIGNED,
    `time` DATETIME NOT NULL,
    `location` VARCHAR(256) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `privacy` VARCHAR(32) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `text` LONGTEXT CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `feeling_action` VARCHAR(32) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `feeling_value` VARCHAR(256) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `boosted` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `boosted_by` INTEGER(10) UNSIGNED,
    `comments_disabled` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `is_hidden` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `reaction_like_count` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `reaction_love_count` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `reaction_haha_count` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `reaction_yay_count` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `reaction_wow_count` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `reaction_sad_count` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `reaction_angry_count` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `comments` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    `shares` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    PRIMARY KEY (`post_id`)
)
ENGINE = MYISAM;

# ---------------------------------------------------------------------- #
# Add table "posts_articles"                                             #
# ---------------------------------------------------------------------- #

CREATE TABLE `posts_articles` (
    `article_id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `post_id` INTEGER(10) UNSIGNED NOT NULL,
    `cover` VARCHAR(256) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `title` VARCHAR(256) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `text` LONGTEXT CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `category_id` INTEGER(10) UNSIGNED NOT NULL,
    `tags` MEDIUMTEXT CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `views` INTEGER(10) UNSIGNED NOT NULL DEFAULT 0,
    PRIMARY KEY (`article_id`)
)
ENGINE = MYISAM;

