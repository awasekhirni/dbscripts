    `default` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL,
    PRIMARY KEY (`theme_id`)
)
ENGINE = MYISAM;

CREATE UNIQUE INDEX `name` ON `system_themes` (`name`);

