    `linkedin_id` VARCHAR(128) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `vkontakte_connected` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `vkontakte_id` VARCHAR(128) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci,
    `user_referrer_id` INTEGER(10),
    `user_affiliate_balance` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `user_wallet_balance` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '0',
    `user_points` INTEGER(10) NOT NULL DEFAULT 0,
    `chat_sound` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '1',
    `notifications_sound` ENUM('0','1') COLLATE utf8mb4_0900_ai_ci NOT NULL DEFAULT '1',
    PRIMARY KEY (`user_id`)
)
ENGINE = MYISAM;

CREATE UNIQUE INDEX `username` ON `users` (`user_name`);

CREATE UNIQUE INDEX `user_email` ON `users` (`user_email`);

CREATE UNIQUE INDEX `facebook_id` ON `users` (`facebook_id`);

CREATE UNIQUE INDEX `twitter_id` ON `users` (`twitter_id`);

CREATE UNIQUE INDEX `linkedin_id` ON `users` (`linkedin_id`);

CREATE UNIQUE INDEX `vkontakte_id` ON `users` (`vkontakte_id`);

CREATE UNIQUE INDEX `instagram_id` ON `users` (`instagram_id`);

CREATE UNIQUE INDEX `user_phone` ON `users` (`user_phone`);

CREATE UNIQUE INDEX `google_id` ON `users` (`google_id`);

# ---------------------------------------------------------------------- #
# Add table "users_blocks"                                               #
# ---------------------------------------------------------------------- #

CREATE TABLE `users_blocks` (
    `id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `user_id` INTEGER(10) UNSIGNED NOT NULL,
    `blocked_id` INTEGER(10) UNSIGNED NOT NULL,
    PRIMARY KEY (`id`)
)
ENGINE = MYISAM;

CREATE UNIQUE INDEX `user_id_blocked_id` ON `users_blocks` (`user_id`,`blocked_id`);

# ---------------------------------------------------------------------- #
# Add table "users_gifts"                                                #
# ---------------------------------------------------------------------- #

CREATE TABLE `users_gifts` (
    `id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `from_user_id` INTEGER(10) UNSIGNED NOT NULL,
    `to_user_id` INTEGER(10) UNSIGNED NOT NULL,
    `gift_id` INTEGER(10) UNSIGNED NOT NULL,
    PRIMARY KEY (`id`)
)
ENGINE = MYISAM;

# ---------------------------------------------------------------------- #
# Add table "users_invitations"                                          #
# ---------------------------------------------------------------------- #

CREATE TABLE `users_invitations` (
    `id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `user_id` INTEGER(10) UNSIGNED NOT NULL,
    `email` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `invitation_date` DATETIME NOT NULL,
    PRIMARY KEY (`id`)
)
ENGINE = MYISAM;

CREATE UNIQUE INDEX `user_id_email` ON `users_invitations` (`user_id`,`email`);

# ---------------------------------------------------------------------- #
# Add table "users_pokes"                                                #
# ---------------------------------------------------------------------- #

CREATE TABLE `users_pokes` (
    `id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `user_id` INTEGER(10) UNSIGNED NOT NULL,
    `poked_id` INTEGER(10) UNSIGNED NOT NULL,
    PRIMARY KEY (`id`)
)
ENGINE = MYISAM;

CREATE UNIQUE INDEX `user_id_blocked_id` ON `users_pokes` (`user_id`,`poked_id`);

# ---------------------------------------------------------------------- #
# Add table "users_searches"                                             #
# ---------------------------------------------------------------------- #

CREATE TABLE `users_searches` (
    `log_id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `user_id` INTEGER(10) UNSIGNED NOT NULL,
    `node_id` INTEGER(10) UNSIGNED NOT NULL,
    `node_type` VARCHAR(32) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `time` DATETIME,
    PRIMARY KEY (`log_id`)
)
ENGINE = MYISAM;

CREATE UNIQUE INDEX `node_id_node_type` ON `users_searches` (`node_id`,`node_type`);

# ---------------------------------------------------------------------- #
# Add table "users_sessions"                                             #
# ---------------------------------------------------------------------- #

CREATE TABLE `users_sessions` (
    `session_id` INTEGER(10) UNSIGNED NOT NULL AUTO_INCREMENT,
    `session_token` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `session_date` DATETIME NOT NULL,
    `user_id` INTEGER(10) UNSIGNED NOT NULL,
    `user_browser` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `user_os` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    `user_ip` VARCHAR(64) CHARACTER SET utf8mb4 COLLATE utf8mb4_0900_ai_ci NOT NULL,
    PRIMARY KEY (`session_id`)
)
ENGINE = MYISAM;

CREATE UNIQUE INDEX `session_token` ON `users_sessions` (`session_token`);

CREATE INDEX `user_ip` ON `users_sessions` (`user_ip`);

